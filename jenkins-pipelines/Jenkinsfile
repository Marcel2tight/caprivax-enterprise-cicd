pipeline {
    agent any
    
    tools {
        maven 'Maven3'
    }

    environment {
        NEXUS_CRED_ID = 'nexus-auth'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build & Deploy') {
            steps {
                configFileProvider([configFile(fileId: 'caprivax-maven-settings', variable: 'MAVEN_SETTINGS')]) {
                    withCredentials([usernamePassword(credentialsId: "${NEXUS_CRED_ID}", passwordVariable: 'NEXUS_PWD', usernameVariable: 'NEXUS_USR')]) {
                        sh "mvn -s $MAVEN_SETTINGS -f smartops-backend/pom.xml clean deploy -DskipTests"
                    }
                }
            }
        }
    }
}
